<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="1dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_marginLeft="0dp"
            android:padding="5dp"
            android:text="Red"
            android:textColor="@color/red"
            android:id="@+id/videotits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
            android:id="@+id/batchvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:visibility="gone"
            android:id="@+id/checvidpackag"
            android:layout_weight="0.10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </CheckBox>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<!--    layout of edit-->


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/hide_li"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText

            android:id="@+id/new_title"
            android:hint="New Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/new_description"
            android:hint="New Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/new_create_date"
            android:hint="New Create Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <EditText
            android:id="@+id/new_expire_date"
            android:hint="Expire Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <EditText
            android:id="@+id/new_amount"
            android:hint="New Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <EditText
            android:id="@+id/newnydiscount_amount"
            android:hint="Discount Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <EditText
            android:id="@+id/newnynewvideo_time"
            android:hint="New Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <Button
            android:text="Select Videos"
            android:textColor="@color/white1"
            android:background="@drawable/button"
            android:id="@+id/selvids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>
        <Button
            android:layout_gravity="right"
            android:textColor="@color/white1"
            android:background="@color/red"
            android:id="@+id/edit_btn_save"
            android:text="Edit and Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>




    <!--    ////-->
    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="0.50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/editvidepckas"
                android:text="Edit Package"
                android:textColor="@color/white1"
                android:background="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <Button
        android:id="@+id/delbyvideo"
        android:text="Delete"
        android:textColor="@color/white1"
        android:background="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>