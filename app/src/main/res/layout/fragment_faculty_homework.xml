<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Give Home Work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout

            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        app:cardCornerRadius="10dp"
                        android:elevation="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_weight="1"
                                android:id="@+id/viewhomes"
                                android:padding="5dp"
                                android:background="@color/red"
                                android:textAllCaps="false"
                                android:textColor="@color/white1"
                                android:text="View HomeWorks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </Button>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:padding="5dp"
                android:textColor="@color/red"
                android:text="Select Class:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>
            <Spinner
                android:id="@+id/class_home_spinner"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

            <TextView
                android:padding="5dp"

                android:textColor="@color/red"
                android:text="Select Batch:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>
            <Spinner
                android:id="@+id/class_batch_spinner"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
            <LinearLayout
                android:id="@+id/dateli"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="0.50"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/green"
                    android:text="Select Work Date"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:layout_weight="0.50"
                    android:id="@+id/selectdatae"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/red"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>
            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:id="@+id/dtechli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="0.50"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/green"
                    android:padding="10dp"
                    android:text="Teacher Name:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView

                    android:layout_weight="0.50"
                    android:id="@+id/selectteacherss"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>
            </LinearLayout>
            <TextView
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/red"
                android:text="Home Work:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:hint="Home work overview"
                        android:layout_weight="1"
                        android:id="@+id/homework"
                        android:inputType="textMultiLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </EditText>
                    <Button
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:id="@+id/upload_pdf"
                        android:padding="5dp"
                        android:background="@color/red"
                        android:textAllCaps="false"
                        android:textColor="@color/white1"
                        android:text="Upload  PDF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:text="Specify Work Type:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>
            <Spinner
                android:id="@+id/worktype"
                android:entries="@array/worktype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </Spinner>

            <TextView
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:text="Home work submission date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>

            <EditText

                android:editable="false"
                android:id="@+id/dayshome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </EditText>
        </LinearLayout>
        <Button

            android:layout_margin="10dp"
            android:textColor="@color/white1"
            android:background="@color/red"
            android:textAllCaps="false"
            android:text="Give Homework"
            android:id="@+id/give_work_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </Button>


    </LinearLayout>
</ScrollView>