<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicAdmin.StudentDetails.Studentadnviewactivty">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Add Student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/addstdfab"
        app:srcCompat="@drawable/fab_add"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>
    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout

        android:id="@+id/stdli"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <EditText
                android:id="@+id/nameed"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Student Name"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp" >


            </EditText>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
             android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/emailtxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Student Email"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp" >


            </EditText>
        </LinearLayout>


        <LinearLayout
              android:padding="3dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <EditText
                android:id="@+id/passworded"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Student Password"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp" >


            </EditText>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
                     android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <EditText
                android:maxLines="1"
                android:maxEms="10"
                android:maxLength="10"
                android:id="@+id/mobileed"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Student Mobile Number"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp" >


            </EditText>
        </LinearLayout>

        <LinearLayout
                     android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/addressed"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Student Address"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp" >


            </EditText>
        </LinearLayout>

        <LinearLayout
                     android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_father_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Student Father's Name"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp">


            </EditText>
        </LinearLayout>
        <LinearLayout

                     android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            

            <EditText
                android:id="@+id/edt_m_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Student Mother's Name"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp">


            </EditText>
        </LinearLayout>
        <LinearLayout
                     android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:maxLines="1"
                android:maxLength="10"
                android:maxEms="10"
                android:id="@+id/edt_parent_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="number"
                android:hint="Student Parent's Number"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp">


            </EditText>
        </LinearLayout>
        <Button
            android:textAllCaps="false"
            android:text="Add Student"
            android:id="@+id/addstudentsbtn"
            android:layout_margin="15dp"
            android:background="@drawable/button"
            android:textColor="@color/white1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stuview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>