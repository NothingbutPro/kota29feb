<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BasicAdmin.StudentDetails.AssignStudentActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">
    <TextView
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Assign Student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name: "
                android:textColor="@color/red">

            </TextView>

                <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="None">

            </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>'
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:textSize="19dp"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:text="Assign Class:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>


        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/backgraund"
                    android:paddingLeft="8dp"
                    android:textSize="15dp">

                <Spinner
                    android:layout_gravity="center_vertical"
                android:id="@+id/class_spin_assign"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </Spinner>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:textSize="19dp"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:text="Assign Batch:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp">
            <Spinner
                android:id="@+id/batch_spin_assign"
               android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </Spinner>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:background="@drawable/button"
            android:textColor="@color/white1"
            android:text="Assign"
            android:id="@+id/btn_assign"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

</LinearLayout>