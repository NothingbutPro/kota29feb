<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicAdmin.TeachersDetails.AnnouncementActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_margin="1dp"
        android:background="@drawable/button"
        android:text="View Announcements"
        android:id="@+id/viewannounce_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
    </LinearLayout>
    <ScrollView
        android:layout_margin="4dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">
        <Spinner
            android:layout_gravity="center_vertical"
            android:id="@+id/class_announce_spin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">
        <Spinner

            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/batch_id_announce_spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>
        </LinearLayout>
        <EditText
            android:background="@drawable/backgraund"
            android:layout_margin="5dp"
            android:inputType="textMultiLine"
            android:hint="Notification To send"
            android:padding="10dp"
            android:lines="5"
            android:minLines="5"
            android:gravity="top|left"
            android:maxLines="5"
            android:layout_marginTop="10dp"
            android:id="@+id/notificationedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:focusable="false"
            android:hint="Announcement Date"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/seldates"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp" >

        </EditText>


        <Button
            android:focusable="false"
            android:layout_margin="10dp"
            android:textColor="@color/white1"
            android:background="@drawable/button"
            android:textAllCaps="false"
            android:id="@+id/announcementbtn"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:text="Announce"
         />
    </LinearLayout>
    </ScrollView>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/announcerecy"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->


<!--    </androidx.recyclerview.widget.RecyclerView>-->

</LinearLayout>