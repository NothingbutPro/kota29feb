<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_bg"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/red"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <TextView
                    android:id="@+id/remarksss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/enq_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/remarksss"
                    android:inputType="textMultiLine"
                    android:text="Meeting with Adrian"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_below="@+id/enq_name"
                    android:id="@+id/enq_nos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile: "
                    android:textColor="@color/blue"
                    android:textSize="16dp"
                    android:inputType="textMultiLine"
                    android:textStyle="bold" />

                <TextView
                    android:layout_below="@+id/enq_name"
                    android:layout_toRightOf="@+id/enq_nos"
                    android:id="@+id/enq_nummber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Meeting with Adrian"
                    android:textColor="@color/blue"
                    android:textSize="16dp"
                    android:inputType="textMultiLine"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/enq_remark_li"
                    android:layout_below="@+id/enq_nummber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_below="@+id/enq_nummber"
                        android:id="@+id/enq_res"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remark:"
                        android:textColor="@color/yello"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/enq_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/enq_nummber"
                        android:layout_marginLeft="4dp"
                        android:inputType="textMultiLine"
                        android:text="Meeting with Adrian"
                        android:textColor="@color/yello"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/enq_remark_li"
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Date: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/homedate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today : 5:40 pm"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/inid"
                        android:text="in "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        />

                    <TextView
                        android:id="@+id/daysofwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="Santa Monica"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/source"
                android:layout_below="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Source:  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                   android:id="@+id/source_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

                <LinearLayout
                    android:weightSum="6"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/source"
                    android:orientation="vertical">
                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="Class :"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roun_rect_lightgray"
                        android:gravity="center"
                        android:text="job"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/classname"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="@drawable/roun_rect_lightgray"
                        android:gravity="center"
                        android:text="family"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="Course:"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/batchname"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roun_rect_lightgray"
                        android:gravity="center"
                        android:text="update"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:weightSum="1"
                        android:foregroundGravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical">
                        <LinearLayout

                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Enquiry By :"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                            </TextView>

                            <TextView
                                android:id="@+id/enq_by_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/teacher"></ImageView>

                            <TextView

                                android:id="@+id/inq_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="CONFIRMED"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="5dp"
                        android:weightSum="1"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView

                            android:layout_marginRight="18dp"
                            android:layout_weight="0.50"
                            android:id="@+id/edit_btn"
                            android:text="Edit"
                            android:src="@drawable/edit_icon"
                            android:textColor="@color/white1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                        <ImageView
                            android:layout_marginRight="4dp"
                            android:src="@drawable/delete_icon"
                            android:layout_weight="0.50"
                            android:id="@+id/delhome"
                            android:text="Delete"
                            android:layout_gravity="right"
                            android:textColor="@color/white1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>


                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/hideli"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/newenquiry_by"
            android:hint="Enquiry By"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">


        </EditText>
        <EditText
            android:maxEms="10"
            android:maxLength="10"
            android:id="@+id/newmobile"
            android:hint="Mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">
        </EditText>

        <EditText
            android:id="@+id/newenquiry_type"
            android:hint="Enquiry Type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp"
            >
        </EditText>

        <EditText
            android:id="@+id/newfollowup_type"
            android:hint="Followup Type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp"
            >
        </EditText>
        <EditText
            android:id="@+id/newfollowup_date"
            android:hint="Followup Date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp"
            >
        </EditText>
        <EditText
            android:id="@+id/newremark"
            android:hint="Remark"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp"
            android:layout_width="match_parent"
            >
        </EditText>
        <Button
            android:background="@drawable/button"
            android:textColor="@color/white1"
            android:text="Edit and Save"
            android:id="@+id/edit_btn_save"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>

