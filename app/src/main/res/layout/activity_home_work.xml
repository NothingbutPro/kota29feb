<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicAdmin.HomeWork.HomeWorkActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:padding="10dp"
    android:textColor="@color/white"
    android:text="Add HomeWork"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    app:cardCornerRadius="10dp"
                    android:elevation="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/viewhomes"
                        android:padding="5dp"
                        android:background="@drawable/button"
                        android:textAllCaps="false"
                        android:textColor="@color/white1"
                        android:text="View HomeWorks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>

                </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:hint="Edit"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">


        <Spinner
            android:id="@+id/class_home_spinner"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:hint="Edit"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">

        <Spinner

            android:id="@+id/class_batch_spinner"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </Spinner>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/dateli"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="0.50"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:hint="Edit"
            android:background="@drawable/button"
            android:paddingLeft="8dp"
            android:textSize="15dp">

        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Select Work Date :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.50"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:hint="Edit"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">
        <TextView
            android:text="Select Date"
            android:layout_weight="0.50"
            android:id="@+id/selectdatae"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:weightSum="1"
            android:id="@+id/dtechli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="0.50"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Edit"
                android:background="@drawable/button"
                android:paddingLeft="8dp"
                android:textSize="15dp">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="0.50"
            android:textColor="@color/white"
            android:text="Select Teacher:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.50"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Edit"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp">

        <TextView
            android:layout_gravity="center_vertical"
            android:text="No Faculty selected"
            android:id="@+id/selectteacher"

            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="Home work overview"
                    android:layout_weight="1"
                    android:id="@+id/homework"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/backgraund"
                    android:paddingLeft="8dp"
                    android:textSize="15dp">


                </EditText>
                <Button
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/upload_pdf"
                    android:padding="5dp"
                    android:background="@drawable/button"
                    android:textAllCaps="false"
                    android:textColor="@color/white1"
                    android:text="Upload  PDF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Button>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:padding="10dp"

            android:textColor="@color/red"
            android:text="Specify Work Type:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">
        <Spinner
            android:layout_gravity="center_vertical"
            android:id="@+id/worktype"
            android:entries="@array/worktype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </Spinner>
        </LinearLayout>
        <TextView
            android:padding="10dp"

            android:textColor="@color/red"
            android:text="Home work submission date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

        <EditText
            android:text="Select Date"
            android:focusable="false"
            android:editable="false"
            android:id="@+id/dayshome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp">


        </EditText>
    </LinearLayout>
    <Button
        android:focusable="false"
        android:layout_margin="10dp"
        android:textColor="@color/white1"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:text="Give Homework"
        android:id="@+id/give_work_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>
    

</LinearLayout>
</ScrollView>