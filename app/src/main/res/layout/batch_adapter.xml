<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:padding="0dp"
                    app:srcCompat="@drawable/teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>
                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <LinearLayout

                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/mainname"
                    android:text="Class"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </TextView>

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7th"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
              />
                    </LinearLayout>
                <LinearLayout

                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/mainsubname"
                        android:text="Batch :"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>

                    <TextView
                        android:layout_marginLeft="1dp"
                        android:gravity="center_vertical"
                        android:id="@+id/add_class"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enthuse"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/brown"/>


                </LinearLayout>

                </LinearLayout>
                    <LinearLayout

                        android:layout_marginTop="2dp"
                        android:id="@+id/assignstd"
                        android:padding="0dp"
                        android:weightSum="1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_marginRight="0dp"
                            android:layout_weight="0.50"
                            android:id="@+id/editbatch"
                            android:text="New Name"
                            android:src="@drawable/edit_icon"
                            android:textColor="@color/white1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:text="Delete"
                            android:id="@+id/delbatch"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/delete_icon"
                            android:layout_weight="0.50"
                            android:layout_gravity="right"
                            android:textColor="@color/white1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/hide_li"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText

                android:id="@+id/batchedit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Enter New Batch Name"
                android:background="@drawable/backgraund"
                android:paddingLeft="8dp"
                android:textSize="15dp" >

            </EditText>
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/edit_btn"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:text="Submit Edit"
                    android:background="@drawable/button"
                    android:textColor="@color/white1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                </Button>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:background="@color/gre"
        android:layout_below="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
</RelativeLayout>