<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".BasicAdmin.TeachersDetails.AddTeachersActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Staff"
            android:textSize="20dp"
            android:layout_margin="5sp"
            android:paddingLeft="15dp"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">



        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:hint=" Enter Name"
            android:background="@drawable/backgraund"
            android:paddingLeft="8dp"
            android:textSize="15dp" />

<LinearLayout
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:background="@drawable/backgraund"
    android:layout_height="50dp"
     android:paddingLeft="8dp"

    >
        <Spinner
            android:layout_gravity="center"
            android:entries="@array/facttypes"
            android:layout_weight="1"
            android:id="@+id/edt_type_spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="15dp" />


</LinearLayout>
        <EditText
            android:maxEms="10"
            android:maxLength="10"
            android:id="@+id/edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Enter Mobile"
            android:paddingLeft="8dp"
            android:inputType="number"
            android:background="@drawable/backgraund"
            android:textSize="15dp" />
        <EditText

            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Enter Email"
            android:paddingLeft="8dp"
            android:background="@drawable/backgraund"
            android:inputType="textEmailAddress"
            android:textSize="15dp" />


        <com.maksim88.passwordedittext.PasswordEditText
            android:id="@+id/ed_password_fact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:hint="Password"
            android:paddingLeft="8dp"
            android:background="@drawable/backgraund"
            android:layout_gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/black" />
        <LinearLayout
            android:id="@+id/main_staff_id_li"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            >

            <LinearLayout

                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/backgraund"
                android:layout_height="50dp"

                >
                <Spinner
                    android:entries="@array/worktype"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/class_staff_spin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:hint="Password"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Password"
                android:paddingLeft="8dp"
                android:background="@drawable/backgraund"
                android:singleLine="true"
                android:inputType="textPassword"
                >
            <Spinner
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/staff_batch_spin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_margin="20dp"
            android:paddingLeft="8dp"
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:text="Add"
            android:textColor="@color/white1"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>