<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:elevation="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <LinearLayout

                android:id="@+id/imgli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

             >

                <ImageView
                    android:id="@+id/manu_img"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/teacher"
                  />

            </LinearLayout>

            <LinearLayout
                android:padding="7dp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout

                android:layout_weight="0.90"
                android:id="@+id/midli"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/factnames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Avesh Khan"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/factnumbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Civil Engineer at Self employed"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/fact_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:text="Indore Area, India"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/assignjobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                      >

                        <ImageView

                            android:id="@+id/editteachers"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/edit_icon"></ImageView>

                        <ImageView
                            android:id="@+id/deltecher"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/delete_icon">

                        </ImageView>
                    </RelativeLayout>

                    <LinearLayout
                        android:paddingTop="5dp"
                     android:id="@+id/onlyassign"
                     android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/aidimg"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"

                        app:srcCompat="@drawable/ic_save_black_24dp" />

                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/green"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Assign jobs"
                        android:textAlignment="center"
                        android:textStyle="bold|normal">
                    </TextView>
                </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/teacehrdli"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/edtteachename"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:hint="Teacher's Name"
                    android:background="@drawable/backgraund"
                    android:paddingLeft="8dp"
                    android:textSize="15dp">


                </EditText>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <EditText
                    android:id="@+id/edtemailtxt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:hint="Teacher's Mail"
                    android:background="@drawable/backgraund"
                    android:paddingLeft="8dp"
                    android:textSize="15dp">


                </EditText>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:maxEms="10"
                    android:maxLength="10"
                    android:id="@+id/edtmobileed"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:hint="Teacher's Mobile"
                    android:background="@drawable/backgraund"
                    android:paddingLeft="8dp"
                    android:textSize="15dp">


                </EditText>
            </LinearLayout>
            <com.github.florent37.shapeofview.shapes.DottedEdgesCutCornerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shape_dot_radius="3dp"
                app:shape_dot_spacing="2dp"
                app:shape_edge_position="right|left"
                app:shape_dottedEdgesCutCorner_bottomLeftSize="8dp"
                app:shape_dottedEdgesCutCorner_bottomRightSize="8dp">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <Button
                android:text="Submit Edit"
                android:id="@+id/teachedtbtn"
                android:layout_margin="15dp"
                android:background="@drawable/button"
                android:textColor="@color/white1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>
                </LinearLayout>
            </com.github.florent37.shapeofview.shapes.DottedEdgesCutCornerView>

        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/gre"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
</LinearLayout>